<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<TextView
			android:id="@+id/textView1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dip"
			android:text="@string/input_num"
			android:textSize="35dip" />

	<Button
			android:id="@+id/btPhone1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="1dip"
			android:digits="1234567890+"
			android:ems="10"
			android:hint="@string/phone1"
			android:maxLength="20"
			android:padding="5dip"
			android:singleLine="true"
			android:textSize="30dip" />

	<Button
			android:id="@+id/btPhone2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="1dip"
			android:digits="1234567890+"
			android:ems="10"
			android:hint="@string/phone2"
			android:maxLength="20"
			android:padding="5dip"
			android:singleLine="true"
			android:textSize="30dip" android:textColor="#ffffffff"/>

	<!--
	<Button
		android:id="@+id/btnButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/dial"
		android:textSize="30dip" />
	-->
	<View
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="1" />

	<include layout="@layout/bottom_button" />

</LinearLayout>
