<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/bg">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="当前颜色:"
				android:textSize="@dimen/header" android:textColor="@color/black"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/tvLED" android:layout_marginLeft="10dp" android:text="        "
				android:background="@color/black" android:textSize="@dimen/header"/>
	</LinearLayout>

	<Button
		android:id="@+id/btLedRed"
		android:text="红色：打开"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:onClick="onClickLedRed" style="@android:style/Widget.Button"/>

	<Button
		android:id="@+id/btLedGreen"
		android:text="绿色：打开"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:onClick="onClickLedGreen" style="@android:style/Widget.Button"/>

	<Button
		android:id="@+id/btLedBlue"
		android:text="蓝色：打开"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:onClick="onClickLedBlue" style="@android:style/Widget.Button"/>

	<include layout="@layout/bottom_button" />

</LinearLayout>