<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:background="@color/bg">

	<TextView
			android:id="@+id/sound"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="测试录音"
			android:textSize="@dimen/header" android:background="@color/widget" android:textColor="@color/black"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1" >
		<Button
				android:id="@+id/start"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="开始录音" style="@android:style/Widget.Button"/>

		<Button
				android:id="@+id/stop"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="停止录音" style="@android:style/Widget.Button"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1" >

		<Button
				android:id="@+id/play"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="播放录音"
				style="@android:style/Widget.Button"/>

		<Button
				android:id="@+id/stopPlay"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="停止播放"
				style="@android:style/Widget.Button"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1" >

		<Button
				android:id="@+id/playFile"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="播放音频文件"
				style="@android:style/Widget.Button"/>
	</LinearLayout>

	<include layout="@layout/bottom_button" />

</LinearLayout>